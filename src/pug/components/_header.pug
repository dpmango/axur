// HEADER :: START
header.header
  .container
    .header__wrapper.wow(data-animation-class="wowFadeDown")
      a(href="#").header__logo
        img(src='img/svg/logo.svg')
        // used for mobile nav
        .header__cta.header__cta--mobile
          span(data-href="#").btn.btn-outline
            span acesse sua conta
      ul.header__menu
        li
          a(js-toggle-menu data-target-menu="solutions" href="#") Soluções
        li
          a(href="#") Peça uma demonstração
      
      ul.header__lang(js-teleport data-teleport-to="header-lang" data-teleport-condition="<992")
        li(data-lang="en")
          a(href="#") EN
        li(data-lang="es")
          a(href="#") ES
        li(data-lang="pt").is-active
          a(href="#") PT
        
      .header__cta
        a(href="#").btn.btn-outline
          span acesse sua conta

      
      .header__hamburger
        .hamburger.hamburger--squeeze(js-toggle-menu data-target-menu="solutions")
          .hamburger-box
            .hamburger-inner
        
// HEADER :: END


