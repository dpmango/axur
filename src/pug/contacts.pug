---
title: Contacts
---
extends shared/_layout
block content
  
  // CONTACTS
  .contacts
    .contacts__wrapper
      .contacts__content(js-layout-padding data-type="container-left" data-stop="<992")
        h1.wow Como podemos <br>ajudar?
        form.contacts__form(action="#" js-validate-contact-form)
          .ui-group.wow(js-dynamic-label)
            label.focused-label Nome completo
            label.placeholder-label Nome completo
            input(type="text" name="name" placeholder="")
          .ui-group.wow(js-dynamic-label)
            label.focused-label E-mail de contato
            label.placeholder-label E-mail de contato
            input(type="text" name="email" placeholder="")
          .ui-group.wow(js-dynamic-label)
            label.focused-label Empresa
            label.placeholder-label Empresa
            input(type="text" name="empresa" placeholder="")
          .ui-group.ui-group--short.wow
            label país
            select(name="country" js-selectric placeholder="Select country")
              option(value="Brazil") Brazil
              option(value="Brazil") Brazil
              option(value="Brazil") Brazil
              option(value="Brazil") Brazil
              option(value="Brazil") Brazil
              option(value="Brazil") Brazil
              option(value="Brazil") Brazil
          .ui-group.ui-group--short.wow
            label telefone
            input(type="tel" name="phone" js-mask-phone placeholder="+55")
          .ui-group.wow
            label assunto
            select(name="country" js-selectric)
              option(value="Informações sobre produtos") Informações sobre produtos
              option(value="Informações sobre produtos") Informações sobre produtos
          .ui-group.wow
            label produto
            select(name="country" js-selectric)
              option(value="Digital Fraud Discovery") Digital Fraud Discovery
              option(value="Digital Fraud Discovery") Digital Fraud Discovery
                    
          .ui-group.wow(js-dynamic-label)
            label.focused-label mensagem
            label.placeholder-label mensagem
            textarea(type="text" placeholder="" rows="4" data-min-rows="4")
          
          .ui-group.wow
            .ui-checkbox
              input(type="checkbox" name="agree" id="agree")
              label(for="agree") 
                span Agendar uma demonstração da plataforma  
          
          .contacts__form-cta.wow
            button(type="submit").btn.btn-primary
              span enviar
                
      .contacts__map.wow(data-animation-class="wowFadeRight")
        script(src="https://maps.googleapis.com/maps/api/js?key=AIzaSyC9JAi68gF-tibx7N11TMlIkLitQ7gQv4A")
